# Transcript Analysis Tool - Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration for GPT-5
OPENAI_API_KEY=your-gpt5-api-key-here
OPENAI_MODEL=gpt-5
OPENAI_API_BASE=https://api.openai.com/v1  # Update if using a different endpoint for GPT-5

# Alternative LLM Providers (optional)
ANTHROPIC_API_KEY=
OLLAMA_HOST=http://localhost:11434

# Processing Configuration
TRANSCRIPT_ANALYZER_CHUNK_SIZE=4000
TRANSCRIPT_ANALYZER_MAX_TOKENS=8000
TRANSCRIPT_ANALYZER_TEMPERATURE=0.7

# Output Configuration
TRANSCRIPT_ANALYZER_OUTPUT_DIR=./output
TRANSCRIPT_ANALYZER_FORMAT=obsidian

# Obsidian Configuration
OBSIDIAN_VAULT_PATH=~/Documents/ObsidianVault

# Performance Settings
RATE_LIMIT_REQUESTS_PER_MINUTE=60
PARALLEL_ANALYSES=false
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# Debug Settings
DEBUG_MODE=false
SAVE_INTERMEDIATE_RESULTS=false
LOG_LEVEL=INFO

# Stage B Transcript Inclusion (optional)
# Include the transcript in Stage B analyzers in addition to combined Stage A results.
# Set to true to enable; default false preserves cost-efficient results-only mode.
TRANSCRIPT_ANALYZER_STAGE_B_INCLUDE_TRANSCRIPT=false
# How to include transcript: full | summary | windowed
TRANSCRIPT_ANALYZER_STAGE_B_TRANSCRIPT_MODE=summary
# Max characters of transcript to include (applies to full/summary/windowed)
TRANSCRIPT_ANALYZER_STAGE_B_TRANSCRIPT_MAX_CHARS=20000
